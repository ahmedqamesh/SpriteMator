/* ------------------------------------------------------------------------------------------------------ */
/* ------ BUTTON --------------------------------------------------------------------------------------- */

QPushButton
{
	
	background: #3D3D3D;
	border-top: 1px solid #4D4D4D;
	border-left: 1px solid #434343;
	border-right: 1px solid #434343;
	border-bottom: 1px solid #444;
	padding-left: 10px;
    padding-right: 10px;
    padding-top: 7px;
    padding-bottom: 7px;
	
}

QPushButton:hover
{
	

	background: #4D4D4D;
	border-top: 1px solid #5D5D5D;
	border-left: 1px solid #555;
	border-right: 1px solid #555;
	border-bottom: 1px solid #4F4F4F;
	
	color: #6ED6FF;
}

QPushButton:pressed
{
	background: #2F2F2F;
	border: 1px solid #1F1F1F;
	color: #4AA9CF;
     padding-bottom: 5px;
}

QPushButton:checked
{
	background: #2F2F2F;
	border: 1px solid #1F1F1F;
	color: #4AA9CF;
}

