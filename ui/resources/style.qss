/* ------------------------------------------------------------------------------------------------------ */
/* --- WINDOW ------------------------------------------------------------------------------------------- */

QMainWindow::separator
{
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:0 #161616, stop: 0.5 #151515, stop: 0.6 #212121, stop:1 #343434);
    padding-left: 4px;
    border: 1px solid #4c4c4c;
    spacing: 3px; /* spacing between items in the tool bar */
}

QMainWindow::separator:hover
{

    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:0 #d7801a, stop:0.5 #b56c17 stop:1 #ffa02f);
    padding-left: 4px;
    border: 1px solid #6c6c6c;
    spacing: 3px; /* spacing between items in the tool bar */
}


/* ---- MENU -------------------------------------------------------------------------------------------- */
/* -------------------------------------------------------------------------------------------------------*/

QMenu::separator
{
    height: 2px;
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:0 #161616, stop: 0.5 #151515, stop: 0.6 #212121, stop:1 #343434);
    padding-left: 4px;
    margin-left: 10px;
    margin-right: 5px;
}

QMenu
{
	background: #1D232D;
    border: 1px solid #333D4F;
}

QMenu::item
{
	margin: 0;
    padding: 2px 20px 2px 20px;
}

QMenu::item:selected
{
}


QMenuBar
{
	padding: 0;
	background: #222;
	
}

QMenuBar::item
{
    background: transparent;
}





QMenuBar::item:pressed
{
    background: #378CBE;
}



/* ------------------------------------------------------------------------------------------------------ */
/* ---- TOOLBAR ----------------------------------------------------------------------------------------- */

QToolBar
{
	 background: #333;
	 border-bottom: 1px solid #444;
}

QToolBar > QWidget
{
	background: transparent;
	border: none;
	
	
}

QToolBar > QWidget:hover
{
	color: #6ED6FF;
}

QToolBar > QWidget:pressed
{
	color: #4AA9CF;
}

/* -------------------------------------------------------------------------------------------------------*/
/* ---SCROLL AREA ----------------------------------------------------------------------------------------*/




/* ------------------------------------------------------------------------------------------------------ */
/* --- SCROLL BAR --------------------------------------------------------------------------------------- */

QScrollBar:horizontal {
     border: 1px solid black;
     background: #202123;
     height: 8px;
     margin: 0px 16px 0 16px;
    
}

QScrollBar::handle:horizontal
{
      background: #2E2F33;
      border: 1px solid black;
	  min-height: 20px;

      
}

QScrollBar::handle:horizontal:pressed
{
	background: #378CBE;
}

QScrollBar::add-line:horizontal {
      border: 1px solid black;
      background: #2E2F33;
      width: 14px;
      subcontrol-position: right;
      subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal {
      border: 1px solid black;
      background: #2E2F33;
      width: 14px;
     subcontrol-position: left;
     subcontrol-origin: margin;
}

QScrollBar::right-arrow:horizontal, QScrollBar::left-arrow:horizontal
{
      border: 1px solid black;
      width: 10px;
      height: 10px;
      background: #378CBE;
}

QScrollBar::right-arrow:horizontal:pressed, QScrollBar::left-arrow:horizontal:pressed
{
	  background: #4BA4D8;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal
{
      background: none;
}

QScrollBar:vertical
{
      border: 1px solid black;
      background: #202123;;
      width: 7px;
      margin: 16px 0 16px 0;
      
}

QScrollBar::handle:vertical
{
      background: #2E2F33;
      border: 1px solid black;
      min-height: 20px;
     
}

QScrollBar::handle:vertical:pressed
{
	  background: #378CBE;
}

QScrollBar::add-line:vertical
{
      border: 1px solid black;
      background: #2E2F33;
      height: 14px;
      subcontrol-position: bottom;
      subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical
{
     border: 1px solid black;
      background: #2E2F33;
      height: 14px;
      subcontrol-position: top;
      subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical
{
      border: 1px solid black;
      width: 10px;
      height: 10px;
      background: #378CBE;
}

QScrollBar::up-arrow:vertical:pressed, QScrollBar::down-arrow:vertical:pressed
{
	  background: #4BA4D8;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical
{
      background: none;
}

QScrollBar::add-page:vertical:pressed, QScrollBar::sub-page:vertical:pressed
{
	  background: #4BA4D8;
}





