/* --------------------------------------------------------------------------------------------------- */
/* -----GROUP BOX------------------------------------------------------------------------------------- */

QGroupBox
{
	background: #222;
    border: 1px solid #333;
    margin-top: 1ex; /* leave space at the top for the title */
}

 QGroupBox::title {

     subcontrol-origin: margin;
     subcontrol-position: top center; 
     padding: 5px;
     background: #3D3D3D;
	 border-top: 1px solid #4D4D4D;
	 border-left: 1px solid #434343;
	 border-right: 1px solid #434343;
	 border-bottom: 1px solid #444;
 }


/* --------------------------------------------------------------------------------------------------- */
/* ----HEADER ---------------------------------------------------------------------------------------- */


QHeaderView::section
{
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:0 #616161, stop: 0.5 #505050, stop: 0.6 #434343, stop:1 #656565);
    padding-left: 4px;
    border: 1px solid #6c6c6c;
}


/* --------------------------------------------------------------------------------------------------- */
/* ---- DOCK ----------------------------------------------------------------------------------------- */

QDockWidget::title
{
    text-align: center;
    spacing: 3px; /* spacing between items in the tool bar */
    background-color: #333;
}

QDockWidget::close-button, QDockWidget::float-button
{
    text-align: center;
    spacing: 1px; /* spacing between items in the tool bar */
    background-color: #555;
}

QDockWidget::close-button:hover, QDockWidget::float-button:hover
{
    background: #ddd;
}



/* --------------------------------------------------------------------------------------------------- */
/* -------- PROGRESS BAR ----------------------------------------------------------------------------- */
QProgressBar
{
    background: #202123;
	border: 1px solid black;
    text-align: center;
}

QProgressBar::chunk
{
    background-color: #378CBE;
    width: 2.15px;
    margin: 0.5px;
}


/* --------------------------------------------------------------------------------------------------- */
/* ------- TAB BAR ----------------------------------------------------------------------------------- */

QTabWidget::pane {
	

	border: 1px solid #333;   

}

QTabWidget::tab-bar {
     left: 5px; /* move to the right by 5px */
 }


QTabBar::tab {
    background: #222;
   	border-right: 1px solid #333;	
	border-left: 1px solid #333;
	border-top: 1px solid #333;    
	padding-left: 10px;
    padding-right: 10px;
    min-width: 8ex;
    padding-top: 6px;
    padding-bottom: 6px;
    margin-right: -3px;
}

QTabBar::tab:last
{
    margin-right: 0; /* the last selected tab has nothing to overlap with on the right */
}

QTabBar::tab:first:!selected
{
 	margin-left: 0px; /* the last selected tab has nothing to overlap with on the right */


}

QTabBar::tab:!selected
{
    color: #aaa;
    
    
}

QTabBar::tab:selected
{
    margin-bottom: 0px;
    background: #3D3D3D;
	border-top: 1px solid #4D4D4D;
	border-left: 1px solid #434343;
	border-right: 1px solid #434343;
	border-bottom: 1px solid #444;
	color: #6ED6FF;
}

QTabBar::tab:!selected:hover
{
    padding-bottom: 3px;
    
}

/* --------------------------------------------------------------------------------------------------- */
/* --------------------------------------------------------------------------------------------------- */

QAbstractSpinBox
{
	padding-right: 15px; /* make room for the arrows */
	background: #111;
	border: 1px solid #2D2D2D;
	selection-background-color: #378CBE;
	min-height: 25px;
	padding-left: 10px;
}

QAbstractSpinBox::up-button {
     subcontrol-origin: border;
     subcontrol-position: top right; /* position at the top right corner */

     width: 16px; /* 16 + 2*1px border-width = 15px padding + 3px parent border */
     background: #3D3D3D;
	 border-top: 1px solid #4D4D4D;
  	 border-left: 1px solid #434343; 
	 border-right: 1px solid #434343;
	 border-bottom: 1px solid #444;
 }



 QAbstractSpinBox::up-button:pressed
 {
     background: #286A85;
	border: 1px solid #19556E;
 }


 QAbstractSpinBox::down-button
 {
     subcontrol-origin: border;
     subcontrol-position: bottom right; /* position at bottom right corner */

     width: 16px;
     background: #3D3D3D;
	 border-top: 1px solid #4D4D4D;
	 border-left: 1px solid #434343;
	 border-right: 1px solid #434343;
	 border-bottom: 1px solid #444;
     
 }



 QAbstractSpinBox::down-button:pressed
 {
     background: #286A85;
	border: 1px solid #19556E;
 }



QSlider
{
	min-height: 25px;
	
}

QSlider::handle:horizontal, QSlider::handle:vertical {
	
    background: #3D3D3D;
	border: 1px solid #4D4D4D;
	
	
}

QSlider::handle:horizontal:pressed, QSlider::handle:vertical:pressed
{
	background: #286A85;
	border: 1px solid #19556E;
}

QSlider::add-page:horizontal, QSlider::add-page:vertical
 {
    background: #111;
	border: 1px solid #2D2D2D;
}

 QSlider::sub-page:horizontal, QSlider::sub-page:vertical {
    background: #111;
	border: 1px solid #2D2D2D;
    
 }
